<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainMenuFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="stu.cn.ua.lab1androidv2.ui.theme.MainMenuFragment"
        android:label="Main Menu"
        tools:layout="@layout/fragment_main_menu" >
        <action
            android:id="@+id/action_mainMenuFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/gameFragment"
        android:name="stu.cn.ua.lab1androidv2.ui.theme.GameFragment"
        android:label="Game"
        tools:layout="@layout/fragment_game" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="stu.cn.ua.lab1androidv2.ui.theme.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
</navigation>
